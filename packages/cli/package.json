{
  "name": "@gasport/cli",
  "version": "0.1.0",
  "description": "Command-line tool for GasPort SDK",
  "main": "./dist/index.js",
  "bin": {
    "gasport": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs --clean --shims",
    "dev": "tsup src/index.ts --format cjs --watch --shims",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@gasport/sdk": "workspace:*",
    "@gasport/types": "workspace:*",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "boxen": "^7.1.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "cli",
    "command-line"
  ],
  "license": "MIT"
}
